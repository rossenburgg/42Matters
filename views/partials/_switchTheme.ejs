<script>
  document.addEventListener('DOMContentLoaded', function() {
    const themePreference = '<%= themePreference %>';
    const bootstrapLink = document.getElementById('bootstrap-theme-link');
    const themeLink = themePreference === 'dark' 
      ? 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap-dark.min.css' 
      : 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css';
    bootstrapLink.setAttribute('href', themeLink);

    console.log(`Theme preference set to ${themePreference}.`);
  });
</script>