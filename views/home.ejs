    appIcons.innerHTML = '';
    currentApps.forEach(app => {
      const iconElement = createAppIcon(app);
      appIcons.appendChild(iconElement);
    });
  }

  function createAppIcon(app) {
    const iconElement = document.createElement('a');
    iconElement.href = '#';
    iconElement.innerHTML = `<img src="${app.icon}" alt="${app.name}">`;
    iconElement.addEventListener('click', (e) => {
      e.preventDefault();
      showAppModal(app);
    });
    return iconElement;
  }

  function showAppModal(app) {
    const modal = document.createElement('div');
    modal.className = 'modal fade';
    modal.innerHTML = `
