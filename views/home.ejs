      modalInstance.hide();
      modal.remove();
    });

    modal.addEventListener('hidden.bs.modal', () => {
      modal.remove();
    });
  }

  function completeAppOptimization(app) {
    completedApps++;
    optimizationProgress.textContent = `${completedApps}/40`;
    
    const index = currentApps.findIndex(a => a.name === app.name);
    if (index !== -1) {
      currentApps.splice(index, 1);
      if (completedApps < 40) {
        const newApp = apps.find(a => !currentApps.includes(a) && a.name !== app.name);
        if (newApp) {
          currentApps.push(newApp);
        }
      }
      renderAppIcons();
    }

    if (completedApps === 40) {
      showCompletionMessage();
    }
  }

